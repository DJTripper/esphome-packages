  flash_size: 8MB
  framework:
    type: esp-idf
    version: recommended
    sdkconfig_options:
      COMPILER_OPTIMIZATION_SIZE: y

output:
  - platform: gpio
    id: "relay_output"
    pin: 5

light:
  - platform: binary
    name: Licht
    output: relay_output
    restore_mode: RESTORE_DEFAULT_OFF
    id: lightid

binary_sensor:
  - platform: gpio
    name: Schalter
    pin:
      number: 10
      inverted: true
    on_press:
      then:
        - light.turn_on: "lightid"
    on_release:
      then:
        - light.turn_off: "lightid"
    filters:
      - delayed_on_off: 50ms
    disabled_by_default: True
